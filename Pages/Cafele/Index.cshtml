@page
@model CafeneaSite.Pages.Cafele.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
 <div class="form-actions no-color">
     <p>
         Căutați cafeaua după un anumi criteriu dorit:
         <input type="text" name="SearchString" value="@Model.CurrentFilter" />
         <input type="submit" value="Search" class="btn btn-primary" /> |
         <a asp-page="./Index">Revenire la lista întreagă</a>
     </p>
     </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cafea[0].DenumireCafea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cafea[0].TipCafea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cafea[0].TipBoabe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cafea[0].TipLapte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cafea[0].TipAroma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cafea[0].CafeaTipuriTopping)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Cafea[0].Pret)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach ( var item in Model.CafeaD.Cafele)
        {
            string selectedRow = "";
            if(item.ID == Model.CafeaID)
            {
                selectedRow = "table-success";
            }

        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.DenumireCafea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipCafea.Tip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipBoabe.DenumireBoabe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipLapte.DenumireLapte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipAroma.DenumireAroma)
            </td>
                <td>
                    @{
                        foreach (var topping in item.CafeaTipuriTopping)
                        {
                            @topping.TipTopping.ID @: @topping.TipTopping.DenumireTopping <br />
                        }
                    }
                </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
