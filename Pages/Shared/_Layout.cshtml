<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CafeneaSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--JS pentru CITESTE MAI MULT/CITESTE MAI PUTIN-->
    <script src="~/JS/index.js"></script>

    <!--CSS pentru BOOTSTRAP-->
    <link rel="stylesheet" href="~/cssBootstrap/bootstrap.min.css">

    <!--CSS pentru EFECTUL DE MISCARE-->
    <link rel="stylesheet" href="~/CSS/aos.css" />

    <!--CSS si JS pentru IMAGINI LIGHT BOX-->
    <script src="~/JS/jquery.min.js"></script>
    <link rel="stylesheet" href="~/JS/jquery.fancybox.min.css" />
    <script src="~/JS/fancybox.min.js"></script>

    <!--CSS ul specific paginii-->
    <link rel="stylesheet" href="~/CSS/style.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Cafenea</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Cafele/Index">Crează-ți povestea</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="#about">Despre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="#">Contact</a>
                        </li>

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <select onchange="location = this.value;">
                                <option value="">Administrator</option>
                                <option value="/TipuriCafele/Index">Tip Cafea</option>
                                <option value="/TipuriBoabe/Index">Tip Boabe</option>
                                <option value="/TipuriLapte/Index">Tip Lapte</option>
                                <option value="/TipuriArome/Index">Tip Aroma</option>
                                <option value="/TipuriToppinguri/Index">Tip Topping</option>
                            </select>

                            <!--
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/TipuriCafele/Index">Tip Cafea</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/TipuriBoabe/Index">Tip Boabe</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/TipuriLapte/Index">Tip Lapte</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/TipuriArome/Index">Tip Aroma</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/TipuriToppinguri/Index">Tip Topping</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Membrii/Index">Membrii</a>
                            </li>
                            -->
                        }


                    </ul>
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CafeneaSite - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>