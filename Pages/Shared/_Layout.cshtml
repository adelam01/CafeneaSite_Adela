<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CafeneaSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--JS pentru CITESTE MAI MULT/CITESTE MAI PUTIN-->
    <script src="~/JS/index.js"></script>

    <!--CSS pentru BOOTSTRAP-->
    <link rel="stylesheet" href="~/cssBootstrap/bootstrap.min.css">

    <!--CSS pentru EFECTUL DE MISCARE-->
    <link rel="stylesheet" href="~/CSS/aos.css" />

    <!--CSS si JS pentru IMAGINI LIGHT BOX-->
    <script src="~/JS/jquery.min.js"></script>
    <link rel="stylesheet" href="~/JS/jquery.fancybox.min.css" />
    <script src="~/JS/fancybox.min.js"></script>

    <!--CSS ul specific paginii-->
    <link rel="stylesheet" href="~/CSS/style.css">
</head>
<body>
    <header>
        <!--SECTIUNEA NAVBAR-->
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark p-md-3">
            <div class="container">
                <!--LOGO-->
                <a href="#" class="navbar-brand">HugAMug</a>

                <!--DROPDOWNLIST-->
                <button type="button" class="navbar-toggler" data-bs-target="#navbarNav" data-bs-toggle="collapse"
                        aria-controls="navbarNav" aria-expanded="false" aria-lable="Toggle Navbar">

                    <span class="navbar-toggler-icon"> </span>
                </button>

                <!--BARA DE NAVIGARE-->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="mx-auto">
                    </div>
                    <ul class="navbar-nav">
                        <li class="nav-item"><a href="#" class="nav-link text-white">Acasă</a></li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item"><a href="/Cafele/Index" class="nav-link text-white">Crează-ți cafeaua</a></li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item"><a href="#about" class="nav-link text-white">Despre</a></li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item"><a href="#" class="nav-link text-white">Contact</a></li>
                    </ul>
                    <ul>
                        @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <select onchange="location = this.value;">
                                <option value="">Administrator</option>
                                <option value="/TipuriCafele/Index">Tip Cafea</option>
                                <option value="/TipuriBoabe/Index">Tip Boabe</option>
                                <option value="/TipuriLapte/Index">Tip Lapte</option>
                                <option value="/TipuriArome/Index">Tip Aroma</option>
                                <option value="/TipuriToppinguri/Index">Tip Topping</option>
                                <option value="/Membrii/Index">Membrii</option>
                            </select>

                        }
                       

                    </ul>
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CafeneaSite - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>