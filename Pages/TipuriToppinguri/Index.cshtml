@page
@model CafeneaSite.Pages.TipuriToppinguri.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<head>
    <link rel="stylesheet" href="~/css/IngredienteCSS.css" asp-append-version="true" />
</head>

<body>
    <h1>Index</h1>

    <p>
        <a asp-page="Create">Create New</a>
    </p>

    <div class="grid-container">
        @foreach (var item in Model.TipTopping)
        {
            <div class="grid-item">
                <h4>@item.DenumireTopping</h4>
                <img src="data:image/jpg;base64 , @item.Imagine" />
                <p>
                <div>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </div>
            </div>
        }
    </div>
</body>